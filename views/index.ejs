                        <div class = "col-md-7">
                          <div>
                            <% _.forEach(feeds, (feed) => { %>  
                              <a href="/news/show/<%= feed._id %>">
                                <div class="card mb-3" style = "border:none;border-left: 5px solid #007bff">
                                  <div class="no-border text-uppercase px-3 pt-3" style = "color: #303030;font-size: 16px;font-family: Arial, Helvetica, sans-serif;font-weight: bold"><%= feed.title %></div>
                                  <span class = "pull-left no-border px-3 pb-0 mt-2" style = "color: #505050; font-weight: bolder; font-size: 12px;"><i class = "fa fa-clock"></i> <%= moment(feed.submitted).format("MMMM Do YYYY") %></span>
                                  <div class="card-body">
                                  <!-- <p class="card-text"><%= feed.content %></p> -->
                                  <% if(user){ %>
                                    <a href="/like/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-heart-solid" style = "color: #e31b23;font-size: 20px;margin-left: -5px;"></i> <%= feed.likes.length %></a>
                                  <% } %>
                                  <a href="/news/show/<%= feed._id %>" class="card-link"><i class="fi-xnsuxl-eye-solid" style = "color: #606060"></i> <%= feed.views %></a>
                                  <a href="/news/show/<%= feed._id %>" class="card-link"><i class="fi-xnsuxl-comment-square-dot-solid" style = "color: #606060"></i> <%= feed.comments.length %></a>
                                  <span class = "pull-right" style = "color: #606060;margin-top: 5px;font-weight: bolder;"><%= moment(feed.submitted).fromNow() %></span>
                                  </div>
                              </div>
                              </a>
                            <% }) %>
                          </div>
                          <div class = "row my-3">
                              <div class = "mx-auto">
                                <% if (pages > 0) { %>
                                  <ul class="pagination text-center">
                                      <% if (current == 1) { %>
                                          <li class="disabled"><a class = "bg-primary pgbutton mr-1"  style = "color: #fff">First</a></li>
                                      <% } else { %>
                                          <li><a href="/home/1" class = "bg-primary pgbutton mr-1" style = "color: #fff">First</a></li>
                                      <% } %>
                                      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                      <% if (i !== 1) { %>
                                          <li class="disabled"><a>...</a></li>
                                      <% } %>
                                      <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                          <% if (i == current) { %>
                                              <li class="active"><a class = "bg-primary pgbutton px-2 mr-2"  style = "color: #fff;"><%= i %></a></li>
                                          <% } else { %>
                                              <li><a href="/home/<%= i %>" class = "bg-primary pgbutton px-2 mr-2"  style = "color: #fff"><%= i %></a></li>
                                          <% } %>
                                          <% if (i == Number(current) + 4 && i < pages) { %>
                                              <li class="disabled"><a>...</a></li>
                                          <% } %>
                                      <% } %>
                                      <% if (current == pages) { %>
                                          <li class="disabled"><a class = "bg-primary pgbutton"  style = "color: #fff">Last</a></li>
                                      <% } else { %>
                                          <li><a href="/home/<%= pages %>" class = "bg-primary pgbutton"  style = "color: #fff">Last</a></li>
                                      <% } %>
                                  </ul>
                              <% } %>
                            </div>
                          </div>
                        </div>
                        <div class = "col-md-5">
                          <% if(!(dailys.length == 0)){ %>
                            <div id="accordion" style = "margin-bottom: 20px;">
                              <div class="bg-primary" style = "margin-bottom: -15px;">
                                  <p class="list-group-item bg-primary" style = "color: #fff"><i class="fa fa-line-chart" aria-hidden="true"></i> Daily Uploads<span class = "pull-right"><a href="/links/1/" style = "color: #fff">More <i class = "fa fa-arrow-right"></i></a></span></p>
                              </div>
                              <% _.forEach(dailys, (daily, index) => { %>
                                <div class="card" style = "border-top:0">
                                  <div class="card-header">
                                        <a class="card-link" data-toggle="collapse" href="#m<%= daily._id %>">
                                          <%= daily.title %>
                                        </a>
                                  </div>
                                  <div id="m<%= daily._id %>" class="collapse" data-parent="#accordion">
                                    <div class="card-body">
                                     <% if(daily.owner){ %>
                                      By-<%= daily.owner %> <span class = "badge badge-primary pull-right">opened by <%= daily.visits %></span>
                                     <% }else{ %>
                                      by-Anonymous <span class = "badge badge-primary pull-right">opened by <%= daily.visits %></span>
                                    <% } %>
                                     <% if(daily.section){ %>
                                      <p>for Section <%= daily.section %></p>
                                     <% } %>
                                     <% if(daily.desc){ %>
                                      <p><%= daily.desc %></p>
                                     <% }else{ %>
                                      <p>No extra info available for this document</p>
                                     <% } %>
                                     <span><a href = "<%= daily.link %>" target = "_blank">Click here to open document</a></span>
                                     <div class = "row">
                                       <div class = "col-12"></div>
                                     </div>
                                    </div>
                                  </div>
                                </div>
                              <% }) %>
                            </div>
                          <% } %>
                          <% if(!(homeworks.length == 0)){ %>
                            <div id="accordion" style = "margin-bottom: 20px;">
                              <div class="bg-primary" style = "margin-bottom: -15px;">
                                  <p class="list-group-item bg-primary" style = "color: #fff"><i class="fa fa-line-chart" aria-hidden="true"></i> Latest Assignments Solution <span class = "pull-right"><a href="/links/1/" style = "color: #fff">More <i class = "fa fa-arrow-right"></i></a></span></p>
                              </div>
                              <% _.forEach(homeworks, (homework, index) => { %>
                                <div class="card" style = "border-top:0">
                                  <div class="card-header">
                                        <a class="card-link" data-toggle="collapse" href="#m<%= homework._id %>">
                                          <%= homework.title %>
                                        </a>
                                  </div>
                                  <div id="m<%= homework._id %>" class="collapse" data-parent="#accordion">
                                    <div class="card-body">
                                      <% if(homework.owner){ %>
                                        By-<%= homework.owner %> <span class = "badge badge-primary pull-right">opened by <%= homework.visits %></span>
                                       <% }else{ %>
                                        by-Anonymous <span class = "badge badge-primary pull-right">opened by <%= homework.visits %></span>
                                      <% } %>
                                     <% if(homework.section){ %>
                                      <p>for Section J</p>
                                     <% } %>
                                     <% if(homework.desc){ %>
                                      <p><%= homework.desc %></p>
                                     <% }else{ %>
                                      <p>No extra info available for this document</p>
                                     <% } %>
                                     <span><a href = "<%= homework.link %>" target = "_blank">Click here to open document</a></span>
                                     <div class = "row">
                                       <div class = "col-12"></div>
                                     </div>
                                    </div>
                                  </div>
                                </div>
                              <% }) %>
                            </div>
                          <% } %>
                          <% if(!(books.length == 0)){ %>
                            <div id="accordion">
                              <div class="bg-primary" style = "margin-bottom: -15px;">
                                  <p class="list-group-item bg-primary" style = "color: #fff"><i class="fa fa-line-chart" aria-hidden="true"></i> Books  <span class = "pull-right"><a href="/links/1/" style = "color: #fff">More <i class = "fa fa-arrow-right"></i></a></span></p>
                              </div>
                              <% _.forEach(books, (book, index) => { %>
                                <div class="card" style = "border-top:0">
                                  <div class="card-header">
                                        <a class="card-link" data-toggle="collapse" href="#m<%= book._id %>">
                                          <%= book.title %>
                                        </a>
                                  </div>
                                  <div id="m<%= book._id %>" class="collapse" data-parent="#accordion">
                                    <div class="card-body">
                                      <% if(book.owner){ %>
                                        By-<%= book.owner %> <span class = "badge badge-primary pull-right">opened by <%= book.visits %></span>
                                       <% }else{ %>
                                        by-Anonymous <span class = "badge badge-primary pull-right">opened by <%= book.visits %></span>
                                      <% } %>
                                     <% if(book.section){ %>
                                      <p>for Section J</p>
                                     <% } %>
                                     <% if(book.desc){ %>
                                      <p><%= book.desc %></p>
                                     <% }else{ %>
                                      <p>No extra info available for this document</p>
                                     <% } %>
                                     <span><a href = "<%= book.link %>" target = "_blank">Click here to open document</a></span>
                                     <div class = "row">
                                       <div class = "col-12"></div>
                                     </div>
                                    </div>
                                  </div>
                                </div>
                              <% }) %>
                            </div>
                          <% } %>
