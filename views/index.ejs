    <script src = "https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/js/app.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/AdminLTE.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/skins/skin-blue.css">
    
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <body class="hold-transition sidebar-collapse skin-black sidebar-mini">
        <!-- Site wrapper -->
        <div class="wrapper">
        
          <%- include("./partials/header.ejs") %>
          <%- include("./partials/sidebar.ejs") %>
          
            <div class="content-wrapper" style = "background: #0E0E10">
                <% if(hasErrors){ %>
                  <% _.forEach(errors, (error) => { %>
                    <div class = "alert alert-danger text-center">
                        <a href = "#" class = "close" data-dismiss = "alert" aria-label="close">&times;</a>
                    <%= error %>
                    </div>
                  <% }) %>
                <% } %>
                <section class="content" style = "background: #0E0E10">
                    <div class = "row">
                        <!-- <div class = "col-md-2">
                           <div class="list-group ">
                            <a href="#" class="list-group-item list-group-item-action active">Dashboard</a>
                            <a href="#" class="list-group-item list-group-item-action">User Management</a>
                            <a href="#" class="list-group-item list-group-item-action">Used</a>
                            <a href="#" class="list-group-item list-group-item-action">Enquiry</a>
                            <a href="#" class="list-group-item list-group-item-action">Dealer</a>
                            <a href="#" class="list-group-item list-group-item-action">Media</a>
                            <a href="#" class="list-group-item list-group-item-action">Post</a>
                            <a href="#" class="list-group-item list-group-item-action">Category</a>
                            <a href="#" class="list-group-item list-group-item-action">New</a>
                            <a href="#" class="list-group-item list-group-item-action">Comments</a>
                            <a href="#" class="list-group-item list-group-item-action">Appearance</a>
                            <a href="#" class="list-group-item list-group-item-action">Reports</a>
                            <a href="#" class="list-group-item list-group-item-action">Settings</a>
                          </div>
                        </div> -->
                        <div class = "col-md-8">
                          <div>
                            <% _.forEach(feeds, (feed) => { %>  
                              <a href="/news/show/<%= feed._id %>">
                                <div class="card mb-2">
                                  <div class="no-border text-uppercase px-3 pt-3" style = "color: #303030;font-size: 16px;font-family: Arial, Helvetica, sans-serif;font-weight: bold"><%= feed.title %></div>
                                  <span class = "pull-left no-border px-3 pb-0 mt-2" style = "color: #505050; font-weight: bolder; font-size: 12px;"><i class = "fa fa-clock"></i> <%= moment(feed.submitted).format("lll") %></span>
                                  <div class="card-body">
                                  <!-- <p class="card-text"><%= feed.content %></p> -->
                                  <% if(user){ %>
                                    <a href="/like/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-heart-solid" style = "color: #e31b23;font-size: 20px;margin-left: -5px;"></i> <%= feed.likes.length %></a>
                                    <a href="" class="card-link"><i class="fi-xnsuxl-eye-solid" style = "color: #606060"></i> <%= feed.views %></a>
                                    <a href="/news/show/<%= feed._id %>" class="card-link"><i class="fi-xnsuxl-comment-square-dot-solid" style = "color: #606060"></i> <%= feed.comments.length %></a>
                                    <span class = "pull-right" style = "color: #606060;margin-top: 5px;font-weight: bolder;"><%= moment(feed.submitted).fromNow() %></span>
                                  <% } %>
                                  </div>
                              </div>
                              </a>
                            <% }) %>
                          </div>
                              <% if (pages > 0) { %>
                                <ul class="pagination text-center">
                                    <% if (current == 1) { %>
                                        <li class="disabled"><a>First</a></li>
                                    <% } else { %>
                                        <li><a href="/home/1">First</a></li>
                                    <% } %>
                                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                    <% if (i !== 1) { %>
                                        <li class="disabled"><a>...</a></li>
                                    <% } %>
                                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                        <% if (i == current) { %>
                                            <li class="active"><a><%= i %></a></li>
                                        <% } else { %>
                                            <li><a href="/home/<%= i %>"><%= i %></a></li>
                                        <% } %>
                                        <% if (i == Number(current) + 4 && i < pages) { %>
                                            <li class="disabled"><a>...</a></li>
                                        <% } %>
                                    <% } %>
                                    <% if (current == pages) { %>
                                        <li class="disabled"><a>Last</a></li>
                                    <% } else { %>
                                        <li><a href="/home/<%= pages %>">Last</a></li>
                                    <% } %>
                                </ul>
                            <% } %>
                        </div>
                        <div class = "col-md-4">
                          <ul class="list-group mb-4">
                                <li class="list-group-item">User name</li>
                            <% _.forEach(links, (link) => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <%= link.title %>
                                    <span class="badge badge-primary badge-pill">10930</span>
                                </li>
                            <% }) %>
                        </ul> 
                        <ul class="list-group mb-4">
                          <li class="list-group-item"><i class = "fa fa-goggles"></i> Trendy Links</li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                              Бонусные баллы
                              <span class="badge badge-primary badge-pill">10930</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                              История заказов
                              <span class="badge badge-primary badge-pill">2</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                              История транзакций
                              <span class="badge badge-primary badge-pill">0</span>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                              Закладки
                          </li>
                      </ul> 
                        </div>
                    </div>
                  <%- include ("./partials/modals.ejs") %>
                </section>
              </div>
            <!-- <footer class="main-footer">
              
            </footer> -->
        </div>
</body>
</html>