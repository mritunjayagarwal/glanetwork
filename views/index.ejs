<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script defer src="https://friconix.com/cdn/friconix-0.1765.js"> </script>
    <!-- Latest compiled and minified CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/skins/skin-green.css">
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/js/app.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/AdminLTE.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/css/skins/skin-blue.css">  
</head>
<body>
    <body class="hold-transition sidebar-collapse skin-black sidebar-mini">
        <!-- Site wrapper -->
        <div class="wrapper">
        
          <%- include("./partials/header.ejs") %>
          <%- include("./partials/sidebar.ejs") %>
          
            <div class="content-wrapper">
                <% if(hasErrors){ %>
                  <% _.forEach(errors, (error) => { %>
                    <div class = "alert alert-danger text-center">
                        <a href = "#" class = "close" data-dismiss = "alert" aria-label="close">&times;</a>
                    <%= error %>
                    </div>
                  <% }) %>
                <% } %>
                <section class="content">
                    <div class = "row">
                        <div class = "col-md-2">
 
                        </div>
                        <div class = "col-md-8">
                          <% _.forEach(feeds, (feed) => { %>  
                            <div class="card mb-2">
                                <div class="card-header"><%= feed.title %></div>
                                <div class="card-body">
                                <p class="card-text"><%= feed.content %></p>
                                <% if(user){ %>
                                    <% if(feed.likes == user.username){ %>
                                      <a href="/like/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-heart-solid"></i> <%= feed.likes.length %></a>
                                    <% }else{ %>
                                      <a href="/like/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-heart-wide"></i> <%= feed.likes.length %></a>
                                    <% } %>
                                  <!-- <a href="/like/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-heart-wide"></i> <%= feed.likes.length %></a> -->
                                  <a href="/comment/<%= user.username %>/<%= feed._id %>" class="card-link"><i class="fi-xwluxl-comment-square-dots-wide"></i> <%= feed.comments %></a>
                                <% } %>
                               
                                </div>
                            </div>
                          <% }) %>
                            </div>
                        <div class = "col-md-2">
                            
                        </div>
                    </div>
                  <%- include ("./partials/modals.ejs") %>
                </section>
            </div>
            <footer class="main-footer"></footer>
        </div>
</body>
</html>