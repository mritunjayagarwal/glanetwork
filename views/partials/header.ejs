<header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>GN</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg">GLA NETWORK</span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" style = "height: 51px;">
        <!-- Sidebar toggle button-->
        <a href="" class="sidebar-toggle" data-toggle="offcanvas" role="button" style = "margin-top:-12px;">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <% if(user){ %>
          <ul class = "list-inline active pb-2">
            <li class = "list-inline-item" style = "margin-left: 5px;">
                <div class="dropdown dropleft">
                  <span style = "font-size: 25px;" id="dropdownMenu"><strong id = "wallet"><%= user.username %></strong>
                  </div>
              </li>   
          </ul>
        <% }else{ %>
          <ul class = "list-inline active pb-2">
            <li class = "list-inline-item" style = "margin-left: 5px;">
                <div class="dropdown dropleft">
                  <span style = "font-size: 25px;" id="dropdownMenu"  data-toggle="modal" data-target="#myModal"><strong id = "wallet">Login</strong>
                  </div>
              </li>  
              <li class = "list-inline-item">
                <div class="dropdown dropleft">
                  <span style = "font-size: 25px;" id="dropdownMenu" data-toggle="modal" data-target="#SignupModal"><strong id = "wallet">Signup</strong>
                  </div>
            </li> 
          </ul>
        <% } %>
    </nav>
</header>